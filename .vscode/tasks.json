{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build GTK Application",
      "type": "shell",
      "command": "${workspaceFolder}\\.vscode\\runner.ps1",
      "args": [
        "${fileDirname}\\${fileBasename}",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Builds the GTK application using g++."
    }
  ]
}
