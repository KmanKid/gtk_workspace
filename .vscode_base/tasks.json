{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build GTK Application",
      "type": "shell",
      "command": "!installpath!usr/bin/bash.exe",
      "args": [
        "-c",
        "g++ -fdiagnostics-color=always -g $(pkg-config --cflags gtk4) !currentdir!/main.cpp -o !currentdir!/main.exe $(pkg-config --libs gtk4)"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Builds the GTK application using g++."
    }
  ]
}
